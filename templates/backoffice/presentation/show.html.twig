{% extends 'backoffice/backoffice_base.html.twig' %}

{% block title %}Presentation{% endblock %}

{% block main %}
    <h1>Presentation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ presentation.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ presentation.Titre }}</td>
            </tr>
            <tr>
                <th>SousTitre</th>
                <td>{{ presentation.SousTitre }}</td>
            </tr>
            <tr>
                <th>Resume</th>
                <td>{{ presentation.Resume }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_backoffice_presentation_edit', {'id': presentation.id}) }}">edit</a>

    {% if is_granted ('ROLE_SUPER_ADMIN') %}
    {{ include('backoffice/presentation/_delete_form.html.twig') }}
    {% endif %}

    <a href="{{ path('app_backoffice_presentation_index') }}">back to list</a>
{% endblock %}
